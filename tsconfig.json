{
    "compilerOptions": {
        "module": "ESNext",
        "target": "es2022",
        "outDir": "jsbin",
        "rootDir": "src",
        "moduleResolution": "node",
        "strict": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "typeRoots": ["node_modules/@types", "typings",],
        "noImplicitAny": false,
        "noImplicitThis": true,
        "jsx": "react-jsx",
    },
    "include": [
        "src/**/*.ts", "src/**/*.tsx"],
    "exclude": ["node_modules"]
}